@model StudentsRM.Models.Role.RoleViewModel
@{
    ViewData["Title"] = "Register Course";
}

<div class="body">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div class="col-md-12 mb-2">
                    <label class="form-label">Role Name:</label>
                    <input type="text" class="form-control" placeholder="Enter Role name" asp-for="RoleName">
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>

                <div class="col-md-12 mb-2">
                    <label class="form-label">Description:</label>
                    <input type="text" class="form-control" placeholder="Enter Description" asp-for="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">Create Role</button>
                </div>

            </form>
        </div>
    </div>
</div>