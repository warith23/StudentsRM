@model List<StudentsRM.Models.Students.StudentViewModel>
@{
    ViewData["Title"] = "Student List";
    int count = 1;
}

@* @await Html.PartialAsync("_ListAlert", Model) *@

@if (Model is not null)
{
    <table class="table" >
        <thead>
            <tr>
                <th scope="col">S/N</th>
                <th scope="col">Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@count</td>
                    <td>@item.FullName</td>
                    <td>
                         <div class="btn-group">
                            <a asp-controller="Result" asp-action="Create" asp-route-id="@item.Id" class="btn btn-primary">Add Result</a>
                        </div>
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
}